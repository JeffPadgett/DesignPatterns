{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=TennisBookings;Trusted_Connection=True;MultipleActiveResultSets=true"
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information"
    }
  },
  
  "AWS": {
    "Region": "eu-west-2"
  },

  "KeyVault": {
    "BaseUrl": "https://tennisbookings.vault.azure.net/"
  },

  "AllowedHosts": "*",

  "Features": {
    "HomePage": {
      "EnableGreeting": true,
      "EnableWeatherForecast": true,
      "ForecastSectionTitle": "What's the weather doing?"
    },
    "WeatherForecasting": {
      "EnableWeatherForecast": true
    },
    "Greeting": {
      "GreetingColour": "#000000"
    }
  },

  "ExternalServices": {
    "WeatherApi": {
      "Url": "http://localhost:62855",
      "MinsToCache": 10
    },
    "ProductsApi": {
      "Url": "http://localhost:62856",
      "MinsToCache": 1,
      "ApiKey": "SUPERSECRETKEY"
    }
  },

  "Content": {
    "CheckForProfanity": true
  },


  "Membership": {
    "MonthlyMembershipFullPrice": 25
  },

  "ClubSettings": {
    "PeakStartHour": 16,
    "PeakEndHour": 20,
    "OpenHour": 7,
    "CloseHour": 22,
    "WinterCourtStartHour": 9,
    "WinterCourtEndHour": 15,
    "WinterMonths": [ 1, 2, 3, 10, 11, 12 ]
  },

  "CourtBookings": {
    "MaxRegularBookingLengthInHours": 3,
    "MaxPeakBookingLengthInHours": 2
  }
}
